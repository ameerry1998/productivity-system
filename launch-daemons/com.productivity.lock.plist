<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.productivity.lock</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/productivity/screen_lock.sh</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>UserName</key>
    <string>root</string>
    <key>StandardOutPath</key>
    <string>/var/log/screen_lock.log</string>
    <key>StandardErrorPath</key>
    <string>/var/log/screen_lock_error.log</string>
</dict>
</plist>
